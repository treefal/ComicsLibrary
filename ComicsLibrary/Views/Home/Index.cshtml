@{
    ViewData["Title"] = "Comics Library";
}

<h3>@ViewData["Title"]</h3>

<div class="mdl-grid">

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="inventory">
                <h2 class="mdl-card__title-text homeLabel">Library Inventory</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage comics.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Inventory" asp-action="Index">
                    View Inventory Index
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="customers">
                <h2 class="mdl-card__title-text homeLabel">Customers</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library customers data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Customer" asp-action="Index">
                    View Customer Index
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="libraries">
                <h2 class="mdl-card__title-text homeLabel">Libraries</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage Comic Library locations.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Library" asp-action="Index">
                    View Library Index
                </a>
            </div>
        </div>
    </div>

</div>
